<odoo>
    <record id="view_hms_patient_tree" model="ir.ui.view">
        <field name="name">hms.patient.tree</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="age"/>
                <field name="blood_type"/>
            </tree>
        </field>
    </record>

    <record id="view_hms_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="birth_date"/>
                    <field name="age"/>
                    <field name="address"/>
                    <field name="history"/>
                    <field name="cr_ratio"/>
                    <field name="blood_type"/>
                    <field name="pcr"/>
                    <field name="image"/>
                </group>
            </form>
        </field>
    </record>

    <menuitem id="hms_root_menu" name="HMS"/>
    <menuitem id="hms_patient_menu" name="Patients" parent="hms_root_menu"/>

    <record id="action_hms_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hms_patient_menu_action" name="Patients" parent="hms_patient_menu" action="action_hms_patient"/>
</odoo>
